Xft.dpi:96
Xft.antialias:false
Xft.rgba:rgb
Xft.hinting:true
Xft.hintstyle:hintslight

URxvt.loginShell:true
URxvt.inputMethod:IBus
URxvt.depth:32

URxvt.mouseWheelScrollPage:true
URxvt.scrollBar:false
!URxvt.scrollBar_floating:false
!URxvt.scrollstyle:rxvt
URxvt.scrollTtyOutput:false
URxvt.scrollWithBuffer:true
URxvt.scrollTtyKeypress:true

URxvt.cursorBlink:true
URxvt.cursorUnderline:false

URxvt.saveLines:100
URxvt.borderLess:false

!URxvt.allow_bold:false
URxvt.font:xft:Monaco:style=Regular:antialias=false:size=12,xft:Source Han Sans CN:style=Regular:size=12
URxvt.boldfont:xft:Source Code Pro:style=Regular:antialias=true:size=12,xft:Source Han Sans CN:style=Regular:size=12

!URxvt.inheritPixmap:false
URxvt.transparent:true
!URxvt.shading:20
URxvt.intensityStyles: false

URxvt.perl-ext-common: default,matcher,-clipboard,font-size
URxvt.url-launcher: /usr/bin/google-chrome-stable
URxvt.matcher.button: 1

!复制、粘贴重新映射失败
!URxvt.clipboard.autocopy: true
!Urxvt.keysym.C-S-c: perl:clipboard:copy
!Urxvt.keysym.C-S-v: perl:clipboard:paste

!https://github.com/majutsushi/urxvt-font-size
!字体大小设置
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-equal:  font-size:reset

URxvt.tintColor: lightgray
URxvt.shading: 60
URxvt.scrollBar_right: true
URxvt.background:            black
URxvt.foreground:            lightgray

